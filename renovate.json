{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "configMigration": true,
  "labels": [
    "dependencies",
    "devcontainer"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "timezone": "UTC",
  "schedule": [
    "before 6am on monday"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^containers/default/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG NVM_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "ARG NVM_VERSION='?(?<currentValue>\\d+\\.\\d+\\.\\d+)'?"
      ],
      "depNameTemplate": "nvm-sh/nvm",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^containers/default/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG POETRY_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "ARG POETRY_VERSION='?(?<currentValue>\\d+\\.\\d+\\.\\d+)'?"
      ],
      "depNameTemplate": "python-poetry/poetry",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^containers/default/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG EZA_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "ARG EZA_VERSION='?(?<currentValue>\\d+\\.\\d+\\.\\d+)'?"
      ],
      "depNameTemplate": "eza-community/eza",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^containers/default/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG ACT_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "ARG ACT_VERSION='?(?<currentValue>\\d+\\.\\d+\\.\\d+)'?"
      ],
      "depNameTemplate": "nektos/act",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^containers/default/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG ACTIONLINT_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "ARG ACTIONLINT_VERSION='?(?<currentValue>\\d+\\.\\d+\\.\\d+)'?"
      ],
      "depNameTemplate": "rhysd/actionlint",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^containers/default/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG AST_GREP_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "ARG AST_GREP_VERSION='?(?<currentValue>\\d+\\.\\d+\\.\\d+)'?"
      ],
      "depNameTemplate": "ast-grep/ast-grep",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^containers/default/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG ZELLIJ_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "ARG ZELLIJ_VERSION='?(?<currentValue>\\d+\\.\\d+\\.\\d+)'?"
      ],
      "depNameTemplate": "zellij-org/zellij",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^containers/default/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG LAZYGIT_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "ARG LAZYGIT_VERSION='?(?<currentValue>\\d+\\.\\d+\\.\\d+)'?"
      ],
      "depNameTemplate": "jesseduffield/lazygit",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^containers/default/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG GH_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "ARG GH_VERSION='?(?<currentValue>\\d+\\.\\d+\\.\\d+)'?"
      ],
      "depNameTemplate": "cli/cli",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "major devcontainer tooling upgrades",
      "labels": [
        "dependencies",
        "devcontainer",
        "tooling",
        "major"
      ],
      "schedule": [
        "before 6am on monday"
      ],
      "automerge": false
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "minor devcontainer tooling updates",
      "labels": [
        "dependencies",
        "devcontainer",
        "tooling",
        "minor"
      ],
      "schedule": [
        "before 6am on monday"
      ],
      "automerge": false
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "patch devcontainer tooling updates",
      "labels": [
        "dependencies",
        "devcontainer",
        "tooling",
        "patch",
        "automerge"
      ],
      "schedule": [
        "before 6am on monday"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "base image",
      "labels": [
        "dependencies",
        "devcontainer",
        "base-image"
      ],
      "schedule": [
        "before 6am on monday"
      ],
      "automerge": false
    }
  ]
}
