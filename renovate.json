{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "labels": ["dependencies", "devcontainer"],
  "dependencyDashboard": true,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "timezone": "UTC",
  "schedule": ["before 6am on monday"],
  "regexManagers": [
    {
      "fileMatch": ["^containers/default/Dockerfile$"],
      "matchStrings": ["ARG NVM_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)", "ARG NVM_VERSION='?(?<currentValue2>\\d+\\.\\d+\\.\\d+)'?"],
      "depName": "nvm-sh/nvm",
      "datasource": "github-releases",
      "versioning": "semver"
    },
    {
      "fileMatch": ["^containers/default/Dockerfile$"],
      "matchStrings": ["ARG POETRY_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)", "ARG POETRY_VERSION='?(?<currentValue2>\\d+\\.\\d+\\.\\d+)'?"],
      "depName": "python-poetry/poetry",
      "datasource": "github-releases",
      "versioning": "semver"
    },
    {
      "fileMatch": ["^containers/default/Dockerfile$"],
      "matchStrings": ["ARG EZA_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)", "ARG EZA_VERSION='?(?<currentValue2>\\d+\\.\\d+\\.\\d+)'?"],
      "depName": "eza-community/eza",
      "datasource": "github-releases",
      "extractVersion": "^v?(?<version>.*)$"
    },
    {
      "fileMatch": ["^containers/default/Dockerfile$"],
      "matchStrings": ["ARG ACT_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)", "ARG ACT_VERSION='?(?<currentValue2>\\d+\\.\\d+\\.\\d+)'?"],
      "depName": "nektos/act",
      "datasource": "github-releases",
      "extractVersion": "^v?(?<version>.*)$"
    },
    {
      "fileMatch": ["^containers/default/Dockerfile$"],
      "matchStrings": ["ARG ACTIONLINT_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)", "ARG ACTIONLINT_VERSION='?(?<currentValue2>\\d+\\.\\d+\\.\\d+)'?"],
      "depName": "rhysd/actionlint",
      "datasource": "github-releases",
      "extractVersion": "^v?(?<version>.*)$"
    },
    {
      "fileMatch": ["^containers/default/Dockerfile$"],
      "matchStrings": ["ARG AST_GREP_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)", "ARG AST_GREP_VERSION='?(?<currentValue2>\\d+\\.\\d+\\.\\d+)'?"],
      "depName": "ast-grep/ast-grep",
      "datasource": "github-releases"
    },
    {
      "fileMatch": ["^containers/default/Dockerfile$"],
      "matchStrings": ["ARG ZELLIJ_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)", "ARG ZELLIJ_VERSION='?(?<currentValue2>\\d+\\.\\d+\\.\\d+)'?"],
      "depName": "zellij-org/zellij",
      "datasource": "github-releases",
      "extractVersion": "^v?(?<version>.*)$"
    },
    {
      "fileMatch": ["^containers/default/Dockerfile$"],
      "matchStrings": ["ARG LAZYGIT_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)", "ARG LAZYGIT_VERSION='?(?<currentValue2>\\d+\\.\\d+\\.\\d+)'?"],
      "depName": "jesseduffield/lazygit",
      "datasource": "github-releases",
      "extractVersion": "^v?(?<version>.*)$"
    },
    {
      "fileMatch": ["^containers/default/Dockerfile$"],
      "matchStrings": ["ARG GH_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)", "ARG GH_VERSION='?(?<currentValue2>\\d+\\.\\d+\\.\\d+)'?"],
      "depName": "cli/cli",
      "datasource": "github-releases",
      "extractVersion": "^v?(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["github-releases"],
      "matchUpdateTypes": ["major"],
      "groupName": "major devcontainer tooling upgrades",
      "labels": ["dependencies", "devcontainer", "tooling", "major"],
      "schedule": ["before 6am on monday"],
      "automerge": false
    },
    {
      "matchDatasources": ["github-releases"],
      "matchUpdateTypes": ["minor"],
      "groupName": "minor devcontainer tooling updates",
      "labels": ["dependencies", "devcontainer", "tooling", "minor"],
      "schedule": ["before 6am on monday"],
      "automerge": false
    },
    {
      "matchDatasources": ["github-releases"],
      "matchUpdateTypes": ["patch"],
      "groupName": "patch devcontainer tooling updates",
      "labels": ["dependencies", "devcontainer", "tooling", "patch", "automerge"],
      "schedule": ["before 6am on monday"],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": []
    },
    {
      "matchManagers": ["dockerfile"],
      "groupName": "base image",
      "labels": ["dependencies", "devcontainer", "base-image"],
      "schedule": ["before 6am on monday"],
      "automerge": false
    }
  ]
}
