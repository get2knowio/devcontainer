{
  "name": "Python Development Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12",
      "installTools": true
    },
    "ghcr.io/devcontainers-extra/features/poetry:2": {
      "version": "latest"
    }
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspace"
}
