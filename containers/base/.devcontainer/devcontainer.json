{
  // Canonical devcontainer.json lives under .devcontainer/ to satisfy devcontainers/ci and CLI expectations.
  // Dockerfile stays one directory up to keep it adjacent to related build assets.
  "name": "Unified DevContainer (Python + TypeScript)",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "args": {
      "BUILDKIT_INLINE_CACHE": "1"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "azureDnsAutoDetection": true,
      "installDockerBuildx": true,
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  },
  "runArgs": ["--privileged"],
  "privileged": true,
  "remoteUser": "vscode",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  }
  // No postCreateCommand: validation handled in CI scripts/test.sh.
  // Container keep-alive is provided by Dockerfile CMD (sleep infinity).
}
